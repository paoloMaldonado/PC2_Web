@using PC2Maldonado.Areas.Employee.Models
@model List<employee>

<h1>Products with view model</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.Country</td>
            </tr>
        }
    </tbody>
</table>